{
  "name": "flutter-app-automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "wdio run ./wdio.conf.js",
    "wdio": "wdio run ./wdio.conf.js",
    "test:debug": "wdio run ./wdio.debug.conf.js",
    "test:employee": "wdio run ./wdio.employee.conf.js",
    "test:hrms": "wdio run ./wdio.conf.js --spec ./test/specs/hrms-navigation.e2e.js",
    "test:hrms:debug": "wdio run ./wdio.conf.js --spec ./test/specs/hrms-navigation.e2e.js --logLevel debug",
    "test:navigation": "wdio run ./wdio.conf.js --spec ./test/specs/hrms-navigation.e2e.js",
    "test:registration-direct": "wdio run ./wdio.conf.js --spec ./test/specs/registration-tests/registration-page-direct.e2e.js",
    "test:registration-direct:debug": "wdio run ./wdio.conf.js --spec ./test/specs/registration-tests/registration-page-direct.e2e.js --logLevel debug",
    "test:registration-direct:debug-apk": "wdio run ./wdio.debug.conf.js --spec ./test/specs/registration-tests/registration-page-direct.e2e.js",
    "test:registration-direct:employee": "wdio run ./wdio.employee.conf.js --spec ./test/specs/registration-tests/registration-page-direct.e2e.js",
    "test:registration-form": "wdio run ./wdio.conf.js --spec ./test/specs/registration-tests/registration-form-only.e2e.js",
    "test:registration-form:debug-apk": "wdio run ./wdio.debug.conf.js --spec ./test/specs/registration-tests/registration-form-only.e2e.js",
    "test:registration-form:employee": "wdio run ./wdio.employee.conf.js --spec ./test/specs/registration-tests/registration-form-only.e2e.js",
    "test:verify-elements": "wdio run ./wdio.debug.conf.js --spec ./test/specs/registration-tests/verify-registration-elements.e2e.js",
    "test:verify-elements:employee": "wdio run ./wdio.employee.conf.js --spec ./test/specs/registration-tests/verify-registration-elements.e2e.js",
    "test:email-validation": "wdio run ./wdio.conf.js --spec ./test/specs/email-validation-test.e2e.js",
    "test:zip-validation": "wdio run ./wdio.conf.js --spec ./test/specs/zip-code-validation-test.e2e.js",
    "test:ssn-validation": "wdio run ./wdio.conf.js --spec ./test/specs/ssn-tin-validation-test.e2e.js",
    "test:field-validation-all": "wdio run ./wdio.conf.js --spec ./test/specs/email-validation-test.e2e.js,./test/specs/zip-code-validation-test.e2e.js,./test/specs/ssn-tin-validation-test.e2e.js",
    "test:skip-registration": "wdio run ./wdio.conf.js --spec ./test/specs/**/*.e2e.js --exclude ./test/specs/registration-tests/**/*.e2e.js",
    "build:hrms": "cd ../hrms-flutter && flutter build apk --debug",
    "copy:hrms": "cp ../hrms-flutter/build/app/outputs/flutter-apk/app-debug.apk ./apps/",
    "setup:hrms": "npm run build:hrms && npm run copy:hrms",
    "test:hrms:full": "npm run setup:hrms && npm run test:hrms",
    "clean:apps": "rm -rf apps/*.apk",
    "clean:screenshots": "rm -rf screenshots/*.png",
    "clean:all": "npm run clean:apps && npm run clean:screenshots"
  },
  "keywords": [
    "flutter",
    "automation",
    "testing",
    "appium",
    "webdriverio",
    "hrms"
  ],
  "author": "",
  "license": "ISC",
  "description": "Automated testing framework for Flutter applications using WebdriverIO and Appium",
  "devDependencies": {
    "@rpii/wdio-html-reporter": "^1.0.4",
    "@wdio/allure-reporter": "^9.15.0",
    "@wdio/appium-service": "^9.15.0",
    "@wdio/cli": "^9.15.0",
    "@wdio/local-runner": "^9.15.0",
    "@wdio/mocha-framework": "^9.15.0",
    "@wdio/spec-reporter": "^9.15.0",
    "@wdio/visual-service": "^8.0.4",
    "allure-commandline": "^2.34.0",
    "appium-uiautomator2-driver": "^4.2.3",
    "log4js": "^6.9.1",
    "source-map-support": "^0.5.21"
  }
}
