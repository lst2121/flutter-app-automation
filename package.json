{
  "name": "flutter-app-automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "wdio run ./wdio.conf.js",
    "test:all": "wdio run ./wdio.conf.js --spec ./test/specs/**/*.e2e.js",
    "test:registration": "wdio run ./wdio.conf.js --spec ./test/specs/registration-form-tests.e2e.js",
    "test:prod:registration": "wdio run ./wdio.prod.conf.js --spec ./test/specs/registration-form-tests.e2e.js",
    "allure-report": "npx allure generate allure-results --clean -o allure-report && npx allure open allure-report",
    "generate:allure-report": "npx allure generate allure-results --clean -o allure-report",
    "open:allure-report": "npx allure open allure-report"
  },
  "keywords": [
    "flutter",
    "automation",
    "testing",
    "appium",
    "webdriverio"
  ],
  "author": "",
  "license": "ISC",
  "description": "Automated testing framework for Flutter applications using WebdriverIO and Appium",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.15.0",
    "@wdio/appium-service": "^9.15.0",
    "@wdio/cli": "^9.15.0",
    "@wdio/local-runner": "^9.15.0",
    "@wdio/mocha-framework": "^9.15.0",
    "@wdio/spec-reporter": "^9.15.0",
    "@wdio/visual-service": "^8.0.4",
    "allure-commandline": "^2.34.0",
    "appium-uiautomator2-driver": "^4.2.3",
    "log4js": "^6.9.1",
    "source-map-support": "^0.5.21"
  }
}
